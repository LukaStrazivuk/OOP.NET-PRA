<Window x:Class="Projekt_WPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_WPF"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="400">
    <Grid Background="LightGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ComboBox Width="100" Height="30" x:Name="cbHome" />
        <ComboBox Grid.Column="2" Width="100" Height="30" x:Name="cbAway" />
        <Label Grid.Column="1" Content="VS" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Column="1" VerticalAlignment="Bottom" Height="20" Content="Dalje" x:Name="btnDalje" Click="btnDalje_Click"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Left" x:Name="btnOdabranaNacija" Click="btnOdabranaNacija_Click"
                Width="50" Height="20" Background="Transparent" Margin="2"/>
    </Grid>
</Window>
